{
  "name": "commitaiflow",
  "displayName": "CommitAIFlow",
  "description": "AI-driven atomic commits + visual Git flow inside VS Code.",
  "version": "0.0.1",
  "publisher": "your-name",
  "engines": {
    "vscode": "^1.88.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:commitaiflow.startOllama",
    "onCommand:commitaiflow.showGitGraph",
    "onCommand:commitaiflow.planAtomicCommits",
    "onView:commitaiflow-actions",
    "onCommand:commitaiflow.generateCommitMessageToScm",
    "onCommand:commitaiflow.previewStagedDiff"
  ],
  "main": "./out/extension.js",
  "icon": "images/commitaiflow-icon-scaled-256.png",
  "contributes": {
    "commands": [
      {
        "command": "commitaiflow.startOllama",
        "title": "CommitAIFlow: Start/Check Ollama"
      },
      {
        "command": "commitaiflow.showGitGraph",
        "title": "CommitAIFlow: Show Git Commit Flow Graph"
      },
      {
        "command": "commitaiflow.planAtomicCommits",
        "title": "CommitAIFlow: Plan Atomic Commits"
      },
      {
        "command": "commitaiflow.generateCommitMessageToScm",
        "title": "CommitAIFlow: Generate Commit Message (SCM Input)"
      },
      {
        "command": "commitaiflow.previewStagedDiff",
        "title": "CommitAIFlow: Preview Staged Diff (Text)"
      },
      {
        "command": "commitaiflow.openSandboxFolder",
        "title": "CommitAIFlow: Open Sandbox Repo"
      },
      {
        "command": "commitaiflow.refreshSandboxChange",
        "title": "CommitAIFlow: Stage New Sandbox Change"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "commitaiflow-gitflow",
          "title": "CommitAIFlow",
          "icon": "images/commitaiflow-activitybar.svg"
        }
      ]
    },
    "views": {
      "commitaiflow-gitflow": [
        {
          "id": "commitaiflow-actions",
          "name": "Commit Flow Actions"
        }
      ]
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -w -p ./",
    "test": "node ./out/test/runTest.js",
    "vscode:prepublish": "npm run compile",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/vscode": "^1.88.0",
    "@vscode/test-electron": "^2.4.0",
    "@vscode/vsce": "^3.0.0",
    "typescript": "^5.4.0"
  }
}
